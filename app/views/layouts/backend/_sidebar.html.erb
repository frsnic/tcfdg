<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <span class="glyphicon glyphicon-dashboard"></span>控制台
      </h4>
    </div>
    <div class="panel-collapse collapse in">
      <div class="panel-body">
        <table class="table">
          <tr>
            <td>
              <%= nav_link "首頁", dashboard_path, icon: "glyphicon glyphicon-home" %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>


  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <span class="glyphicon glyphicon-pushpin"></span>文章
      </h4>
    </div>
    <div class="panel-collapse collapse in">
      <div class="panel-body">
        <table class="table">
          <tr>
            <td>
              <%= nav_link "文章列表", posts_path, icon: "glyphicon glyphicon-file" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= nav_link "新增文章", new_post_path, icon: "glyphicon glyphicon-pencil", data: { no_turbolink: true } %>
            </td>
          </tr>
          <tr>
            <td>
              <%= nav_link "分類", categories_path, icon: "glyphicon glyphicon-paperclip", data: { no_turbolink: true } %>
            </td>
          </tr>
          <tr>
            <td>
              <%= nav_link "標籤", tags_path, icon: "glyphicon glyphicon-tags", data: { no_turbolink: true } %>
            </td>
          </tr>
          <tr>
            <td>
              <%= nav_link "迴響", comments_path, icon: "glyphicon glyphicon-comment" %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <span class="glyphicon glyphicon-flag"></span>其他
      </h4>
    </div>
    <div class="panel-collapse collapse in">
      <div class="panel-body">
        <table class="table">
          <tr>
            <td>
              <%= nav_link "活動資訊", activities_path, icon: "glyphicon glyphicon-plane" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= nav_link "相關新聞", news_index_path, icon: "glyphicon glyphicon-facetime-video" %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree"><span class="glyphicon glyphicon-user">
        </span>Account</a>
      </h4>
    </div>
    <div id="collapseThree" class="panel-collapse collapse">
      <div class="panel-body">
        <table class="table">
          <tr>
            <td>
              <a href="http://www.jquery2dotnet.com">Change Password</a>
            </td>
          </tr>
          <tr>
            <td>
              <a href="http://www.jquery2dotnet.com">Notifications</a> <span class="label label-info">5</span>
            </td>
          </tr>
          <tr>
            <td>
              <a href="http://www.jquery2dotnet.com">Import/Export</a>
            </td>
          </tr>
          <tr>
            <td>
              <span class="glyphicon glyphicon-trash text-danger"></span><a href="http://www.jquery2dotnet.com" class="text-danger">
              Delete Account</a>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour"><span class="glyphicon glyphicon-flash">
        </span>Reports</a>
      </h4>
    </div>
    <div id="collapseFour" class="panel-collapse collapse">
      <div class="panel-body">
        <table class="table">
          <tr>
            <td>
              <span class="glyphicon glyphicon-usd"></span><a href="http://www.jquery2dotnet.com">Sales</a>
            </td>
          </tr>
          <tr>
            <td>
              <span class="glyphicon glyphicon-user"></span><a href="http://www.jquery2dotnet.com">Customers</a>
            </td>
          </tr>
          <tr>
            <td>
              <span class="glyphicon glyphicon-tasks"></span><a href="http://www.jquery2dotnet.com">Products</a>
            </td>
          </tr>
          <tr>
            <td>
              <span class="glyphicon glyphicon-shopping-cart"></span><a href="http://www.jquery2dotnet.com">Shopping Cart</a>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
